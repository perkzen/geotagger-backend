generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  firstname String
  lastname  String
  password  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  provider  Provider @default(local)

  @@map("users")
}

enum Provider {
  google
  facebook
  local
}
